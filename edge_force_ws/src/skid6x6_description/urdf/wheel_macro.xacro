<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- ========================================================= -->
  <!--                         MACROS                            -->
  <!-- ========================================================= -->
  <!-- One macro for wheel creation (link + joint) -->
  <xacro:macro name="wheel" params="name parent x y z">
    <link name="${name}_link">
      <visual>
        <geometry>
          <cylinder length="0.05" radius="0.12"/>
        </geometry>
        <origin rpy="0 1.5708 0" xyz="0 0 0"/>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="0.05" radius="0.12"/>
        </geometry>
        <origin rpy="0 1.5708 0" xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="0.5"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    </link>

    <joint name="${name}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${name}_link"/>
      <origin rpy="0 0 1.57" xyz="${x} ${y} ${z}"/>
      <axis xyz="1 0 0"/>
    </joint>

    <gazebo reference="${name}_link">
      <material>Gazebo/Black</material>
      <mu1>1.0</mu1>
      <mu2>1.0</mu2>
    </gazebo>
  </xacro:macro>
  
</robot>